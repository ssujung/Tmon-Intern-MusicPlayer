<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/library_item_layout">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/thumbnail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/empty_thumbnail"/>

        <ImageView
            android:id="@+id/equalizer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/equalizer_anim1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/equalizer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/equalizer_anim2"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/equalizer3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/equalizer_anim3"
            android:visibility="gone"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/song_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_name"
            android:textColor="@color/artist_name_color"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>